generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  phone     String?
  createdAt DateTime @default(now())
}

model Staff {
  id          String   @id @default(cuid())
  sn          String?  // Serial Number (opsional jika ingin mengikuti urutan manual)
  firstName   String
  lastName    String
  gender      String
  staffId     String   @unique
  phone       String?
  role        String
  designation String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("staffs") // Mengubah nama tabel di database menjadi plural 'staffs'
}

model Purchasing {
  id          String   @id @default(cuid())
  item        String
  qty         String
  amount      String
  requestedBy String
  date        DateTime @default(now())
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}