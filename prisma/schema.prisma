generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---

enum PurchaseStatus {
  PENDING
  APPROVED
  REJECTED
  RECEIVED
}

enum ProductionStatus {
  SCHEDULLING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// TAMBAHKAN ENUM INI (Tadi Hilang)
enum PenjualanStatus {
  PENDING
  COMPLETED
  CANCELLED
}

// TAMBAHKAN ENUM INI untuk Contact
enum ContactType {
  CUSTOMER
  SUPPLIER
}

// --- MODELS ---

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  password     String
  phone        String?
  role         String   @default("Staff")
  createdAt    DateTime @default(now())
  staffProfile Staff?
}

model Staff {
  id          String   @id // ID ini akan sama dengan User.id
  email       String   @unique
  user        User     @relation(fields: [id], references: [id], onDelete: Cascade)
  sn          String?
  firstName   String
  lastName    String
  gender      String
  staffId     String   @unique
  phone       String?
  role        String
  designation String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("staffs")
}

model Purchasing {
  id          String         @id @default(cuid())
  noPO        String         @unique
  item        String
  qty         String
  amount      String?
  category    String
  type        String         @default("STOCKS")
  supplier    String?
  status      PurchaseStatus @default(PENDING)
  isReceived  Boolean        @default(false)
  receipts    Receipt[]
  requestedBy String
  approvedBy  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Receipt {
  id           String     @id @default(cuid())
  receiptNo    String     @unique
  purchasingId String
  purchasing   Purchasing @relation(fields: [purchasingId], references: [id])
  suratJalan   String
  vehicleNo    String
  receivedQty  Float
  receivedBy   String
  condition    String     @default("GOOD")
  notes        String?
  receivedAt   DateTime   @default(now())
}

model Stock {
  id              String   @id @default(cuid())
  name            String   @unique
  category        String
  stock           Float
  unit            String
  type            String
  price           String?
  status          String?
  lastPurchasedId String?
  updatedAt       DateTime @updatedAt
}

model Production {
  id          String                @id @default(cuid())
  noBatch     String                @unique
  productName String
  targetQty   Float
  actualQty   Float?
  status      ProductionStatus      @default(SCHEDULLING)
  totalCost   Float                 @default(0)
  unitCost    Float                 @default(0)
  startDate   DateTime              @default(now())
  endDate     DateTime?
  components  ProductionComponent[]
  createdBy   String
  notes       String?
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
}

model ProductionComponent {
  id           String     @id @default(cuid())
  productionId String
  production   Production @relation(fields: [productionId], references: [id], onDelete: Cascade)
  itemName     String
  qtyNeeded    Float
  unit         String     @default("Unit")
  createdAt    DateTime   @default(now())
}

model Task {
  id        String   @id @default(cuid())
  title     String
  time      String
  priority  String
  category  String
  assignee  String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model History {
  id          String   @id @default(uuid())
  action      String
  item        String
  category    String
  type        String
  quantity    Float
  unit        String   @default("Unit")
  user        String
  notes       String?
  referenceId String?
  createdAt   DateTime @default(now())
}


model Penjualan {
  id          String          @id @default(cuid())
  invoiceId   String          @unique
  totalAmount Float
  status      PenjualanStatus @default(PENDING)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  customerId  String
  customer    Contact         @relation(fields: [customerId], references: [id])
  items       PenjualanItem[]
}

model PenjualanItem {
  id          String    @id @default(cuid())
  penjualanId String
  penjualan   Penjualan @relation(fields: [penjualanId], references: [id], onDelete: Cascade)
  productName String
  quantity    Float
  price       Float
}

model Contact {
  id        String      @id @default(cuid())
  name      String
  type      ContactType @default(CUSTOMER)
  email     String?     @unique
  phone     String?
  address   String?
  penjualan Penjualan[]
  createdAt DateTime    @default(now())
}