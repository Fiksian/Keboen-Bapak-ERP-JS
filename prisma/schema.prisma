generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  phone     String?
  role      String   @default("Staff")
  createdAt DateTime @default(now())
  staffs    staffs?
}

model Purchasing {
  id          String         @id @default(cuid())
  noPO        String         @unique
  item        String
  qty         Float          @default(0)
  unit        String         @default("KG")
  price       String?
  category    String
  type        String         @default("STOCKS")
  supplier    String?
  status      PurchaseStatus @default(PENDING)
  isReceived  Boolean        @default(false)
  requestedBy String
  approvedBy  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  receipts    Receipt[]
}

model Receipt {
  id           String     @id @default(cuid())
  receiptNo    String     @unique
  purchasingId String
  suratJalan   String
  vehicleNo    String
  receivedQty  Float
  receivedBy   String
  condition    String     @default("GOOD")
  notes        String?
  receivedAt   DateTime   @default(now())
  purchasing   Purchasing @relation(fields: [purchasingId], references: [id])
}

model Stock {
  id              String   @id @default(cuid())
  name            String   @unique
  category        String
  stock           Float
  unit            String
  type            String
  price           String?
  status          String?
  lastPurchasedId String?
  updatedAt       DateTime @updatedAt
}

model Production {
  id          String                @id @default(cuid())
  noBatch     String                @unique
  productName String
  targetQty   Float
  actualQty   Float?
  status      ProductionStatus      @default(SCHEDULLING)
  totalCost   Float                 @default(0)
  unitCost    Float                 @default(0)
  startDate   DateTime              @default(now())
  endDate     DateTime?
  createdBy   String
  notes       String?
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  components  ProductionComponent[]
}

model ProductionComponent {
  id           String     @id @default(cuid())
  productionId String
  itemName     String
  qtyNeeded    Float
  unit         String     @default("Unit")
  createdAt    DateTime   @default(now())
  production   Production @relation(fields: [productionId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  title     String
  time      String
  priority  String
  category  String
  assignee  String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model History {
  id          String   @id @default(uuid())
  action      String
  item        String
  category    String
  type        String
  quantity    Float
  unit        String   @default("Unit")
  user        String
  notes       String?
  referenceId String?
  createdAt   DateTime @default(now())
}

model Penjualan {
  id          String          @id @default(cuid())
  invoiceId   String          @unique
  totalAmount Float
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  customerId  String?
  status      String          @default("PENDING")
  customer    Contact?        @relation(fields: [customerId], references: [id])
  items       PenjualanItem[]
}

model PenjualanItem {
  id          String    @id @default(cuid())
  penjualanId String
  productName String
  quantity    Float
  price       Float
  unit        String?   @default("Unit")
  penjualan   Penjualan @relation(fields: [penjualanId], references: [id])
}

model Contact {
  id        String      @id @default(cuid())
  name      String
  type      ContactType @default(CUSTOMER)
  email     String?     @unique
  phone     String?
  address   String?
  createdAt DateTime    @default(now())
  penjualan Penjualan[]
}

model staffs {
  id          String   @id
  email       String   @unique
  sn          String?
  firstName   String
  lastName    String
  gender      String
  staffId     String   @unique
  phone       String?
  role        String
  designation String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  User        User     @relation(fields: [id], references: [id], onDelete: Cascade)
}

model Transaction {
  id          String   @id @default(cuid())
  trxNo       String   @unique // Contoh: TRX-202602-001
  category    String   // Operasional, Gaji, Penjualan, Pembelian, dll
  description String?
  amount      Float    
  type        String   // "INCOME" atau "EXPENSE"
  date        DateTime @default(now())
  method      String   @default("CASH") // CASH, BANK TRANSFER, dll
  createdBy   String
  referenceId String?  // ID dari Penjualan atau Purchasing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum PurchaseStatus {
  PENDING
  APPROVED
  REJECTED
  RECEIVED
}

enum ProductionStatus {
  SCHEDULLING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PenjualanStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum ContactType {
  CUSTOMER
  SUPPLIER
}
